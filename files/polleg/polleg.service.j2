[Unit]
Description=Polleg
Documentation=https://github.com/cartabinaria/polleg

After=network.target

[Service]
User=polleg
Group=polleg
Environment=GOTRACEBACK=crash
ExecStart=/opt/polleg/polleg /opt/polleg/config.toml
WorkingDirectory=/opt/polleg
ReadWriteDirectories=/opt/polleg
Restart=always

[Install]
WantedBy=multi-user.target
